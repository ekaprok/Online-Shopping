<% layout('layout') -%>
<div class="container">
  <div class="card card-container">

    <% if (message.length > 0) { %>
      <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= message %>
      </div>
    <% } %>

    <form method="post">

      <h1> Edit Profile </h1>
      <div class="form-group">
        <input type="text" placeholder="New Name *" class="form-control" value="<%= user.profile.name %>" name="name">
      </div>
      <div class="form-group">
        <input type="text" placeholder="Your Address *" class="form-control" value="<%= user.address %>" name="address">
      </div>

      <button type="submit" class="btn btn-xl btn-smaller">Submit</button>

    </form>
  </div>
</div>
